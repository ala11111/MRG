<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dev_print_cheque_wizard_form" model="ir.ui.view">
        <field name="name">view.dev.print.cheque.wizard.form</field>
        <field name="model">dev.print.cheque.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Cheque">
                <field name="payment_ids" invisible="1"/>
                <group>
                    <group>
                        <field name="invoice_id" invisible="1"/>
                        <field name="payment_id" domain="[('id','in',payment_ids)]" widget="selection"/>
                        <field name="cheque_formate_id" widget="selection"/>
                    </group>
                    <group>
                        <field name="text_free"/>
                        <field name="partner_text"/>
                        <field name="cheque_no"/>
                    </group>
                </group>
                <footer>
                    <button name="print_cheque" string="Print Cheque" type="object" class="btn-primary"/>
                    or
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
     <record id="action_invoice_print_cheque" model="ir.actions.act_window">
            <field name="name">Print Cheque</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dev.print.cheque.wizard</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>



        <record id="view_dev_print_cheques_wizard_form" model="ir.ui.view">
        <field name="name">view.dev.print.cheques.wizard.form</field>
        <field name="model">dev.print.cheques.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Cheques">
                <group>

                        <group>
                            <field name="cheque_formate_ids" widget="many2many_tags"/>
                        </group>

                        <br/>
                        <group>
                             <field name="date_from" />
                             <field name="date_to" />
                        </group>



                </group>
                <footer>
                    <button name="get_report" string="Print Cheques" type="object" class="btn-primary"/>
                    or
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

     <record id="action_invoice_print_cheques" model="ir.actions.act_window">
            <field name="name">Print Cheques</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dev.print.cheques.wizard</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="print_cheques_menu" name="Print Cheques" parent="account.menu_finance_reports" action="action_invoice_print_cheques" sequence="100"/>
                 
</odoo>
